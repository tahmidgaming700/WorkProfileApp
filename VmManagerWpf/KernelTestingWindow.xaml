<Window x:Class="VmManagerWpf.KernelTestingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kernel Testing Mode" Height="280" Width="560" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="EnabledCheckBox" Grid.ColumnSpan="3" Content="Enable Kernel Testing Mode"/>

        <TextBlock Grid.Row="1" Text="Kernel:" VerticalAlignment="Center"/>
        <TextBox x:Name="KernelTextBox" Grid.Row="1" Grid.Column="1" Margin="6"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Browse" Margin="4" Click="BrowseKernel_Click"/>

        <TextBlock Grid.Row="2" Text="Initramfs:" VerticalAlignment="Center"/>
        <TextBox x:Name="InitramfsTextBox" Grid.Row="2" Grid.Column="1" Margin="6"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Browse" Margin="4" Click="BrowseInitramfs_Click"/>

        <TextBlock Grid.Row="3" Text="Kernel Cmdline:" VerticalAlignment="Center"/>
        <TextBox x:Name="CmdlineTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="6"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Save" Width="80" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
