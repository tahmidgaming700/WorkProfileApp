{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/template-catalog.schema.json",
  "title": "Template Catalog",
  "type": "object",
  "required": ["version", "templates"],
  "properties": {
    "version": { "type": "string" },
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "isoUrl", "isoFileName", "sha256", "defaultRamMb", "defaultCpuCores", "defaultDiskGb", "accelerator"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "isoUrl": { "type": "string", "format": "uri" },
          "isoFileName": { "type": "string" },
          "sha256": { "type": "string" },
          "defaultRamMb": { "type": "integer", "minimum": 256 },
          "defaultCpuCores": { "type": "integer", "minimum": 1 },
          "defaultDiskGb": { "type": "integer", "minimum": 8 },
          "accelerator": { "type": "string" }
        }
      }
    }
  }
}
